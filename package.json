{
  "name": "tailwindcss-variables",
  "version": "1.0.0",
  "description": "Easily create css variables without the need for a css file!",
  "main": "src/index.js",
  "license": "GPL-3.0-or-later",
  "repository": "https://github.com/mertasan/tailwindcss-variables",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "test": "jest",
    "build": "env NODE_ENV=production node scripts/build.js",
    "build:clean": "env NODE_ENV=production CLEAN=true node scripts/build.js"
  },
  "keywords": [],
  "author": "",
  "dependencies": {
    "lodash": "^4.17.21"
  },
  "peerDependencies": {
    "postcss": "^8.2.4",
    "tailwindcss": "^2.0.4"
  },
  "prettier": {
    "printWidth": 120,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "devDependencies": {
    "autoprefixer": "10",
    "jest": "^26.6.0",
    "postcss": "^8.2.4",
    "prettier": "^2.2.1",
    "snapshot-diff": "^0.8.1",
    "tailwindcss": "^2.0.4"
  },
  "jest": {
    "testTimeout": 30000,
    "testMatch": [
      "<rootDir>/__tests__/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "<rootDir>/__tests__/**/*.js"
    ],
    "coveragePathIgnorePatterns": [
      "<rootDir>/__tests__/util/"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/__tests__/util/"
    ]
  },
  "browserslist": [
    "> 1%",
    "not edge <= 18",
    "not safari <= 13",
    "not ie 11",
    "not op_mini all"
  ]
}
